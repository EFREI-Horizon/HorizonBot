{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "checkJs": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "paths": {
			"@/app": ["./src"],
			"@/app/*": ["./src/*"],
			"@/config": ["./config"],
			"@/config/*": ["./config/*"],
			"@/decorators": ["src/lib/decorators"],
			"@/eclasses": ["./src/lib/eclasses"],
			"@/eclasses/*": ["./src/lib/eclasses/*"],
			"@/lib": ["./src/lib"],
			"@/lib/*": ["./src/lib/*"],
			"@/models": ["./src/lib/models"],
			"@/models/*": ["./src/lib/models/*"],
			"@/resolvers": ["./src/lib/resolvers"],
			"@/root": ["."],
			"@/root/*": ["./*"],
			"@/structures": ["./src/lib/structures"],
			"@/structures/*": ["./src/lib/structures/*"],
			"@/types": ["./src/lib/types"],
			"@/types/*": ["./src/lib/types/*"],
			"@/utils": ["src/lib/utils"],
		},
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2019",
    "typeRoots": ["./typings", "./node_modules/@types"],
  },
  "include": ["./src/**/*.ts", "./config/**/*.ts"],
  "exclude": ["node_modules/", "typings/"]
}
